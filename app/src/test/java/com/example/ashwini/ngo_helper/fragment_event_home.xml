<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/a1"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/posted"
        tools:layout_editor_absoluteX="0dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/overview"
        android:layout_width="380dp"
        android:layout_height="149dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/payin"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/payin"
        android:layout_width="212dp"
        android:layout_height="67dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"

        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/in2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/in2"
        android:layout_width="212dp"
        android:layout_height="67dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/pay"
        android:layout_width="127dp"
        android:layout_height="71dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:text="WORK WITH HRS"
        app:layout_constraintBottom_toTopOf="@+id/pay2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/pay2"
        android:layout_width="127dp"
        android:layout_height="71dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:text="pay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/posted"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/prgs"
        tools:layout_editor_absoluteX="14dp" />

    <TextView
        android:id="@+id/enddate"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/posted"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ProgressBar
        android:id="@+id/prgs"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="358dp"
        android:layout_height="29dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/overview"
        tools:layout_editor_absoluteX="14dp" />

</android.support.constraint.ConstraintLayout>